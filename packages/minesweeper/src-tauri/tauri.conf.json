{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "MineSweeper",
  "version": "0.1.0",
  "identifier": "dev.caiji.minesweeper",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "yarn run dev",
    "beforeBuildCommand": "yarn run build:desktop"
  },
  "app": {
    "windows": [
      {
        "title": "MineSweeper",
        "width": 700,
        "height": 490,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}